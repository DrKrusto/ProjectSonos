<Window x:Class="Project_Sonos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Sonos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="354" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None">
    <Grid Background="#FF36393F">
        <Grid HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="354">
            <Grid x:Name="grid_menuBar" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="354" Background="#FF2F3136" Margin="0,23,0,0">
                <Border x:Name="border_outerMenuBar" BorderBrush="#FF2B2D30" BorderThickness="0,0,0,1" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="354"/>
                <Grid Margin="0,0,0,1">
                    <Border x:Name="border_menuBar" BorderBrush="#FF202225" BorderThickness="0,0,0,1" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="354">
                        <Grid x:Name="grid_menuButtons" HorizontalAlignment="Left" VerticalAlignment="Center" Width="354" Height="22" Margin="0,7">
                            <Button x:Name="btn_newSound" Content="New sound" HorizontalAlignment="Center" Width="334" Click="btn_newSound_Click" FontFamily="/Project Sonos;component/fonts/#Pragmatica Book" VerticalAlignment="Center" Margin="10,1"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
            <ListBox x:Name="lb_sounds" HorizontalAlignment="Center" Height="368" Margin="10,72,10,10" VerticalAlignment="Center" Width="334" Background="{x:Null}" BorderBrush="#FF3D3D40" ItemsSource="{Binding}" SelectionChanged="lb_sounds_SelectionChanged" Focusable="False" ItemContainerStyle="{DynamicResource listContainerStyle}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid x:Name="ellipse_soundButton" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonUp="ellipse_soundButton_MouseLeftButtonUp">
                            <Ellipse x:Name="ellipse_imageOfSound" HorizontalAlignment="Center" Height="75" Margin="0,0,0,0" Stroke="{x:Null}" VerticalAlignment="Center" Width="75" Style="{DynamicResource soundButton}">
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="ib_imageOfSound" ImageSource="1200px-Button_Icon_Red.svg.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Label Content="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Grid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="{Binding Name}"></MenuItem>
                                    <Separator/>
                                    <MenuItem x:Name="mi_changeSound" Header="Change sound..." Click="changeSound" />

                                    <MenuItem x:Name="mi_delete" Header="Delete" Click="mi_delete_Click"/>
                                </ContextMenu>
                            </Grid.ContextMenu>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label x:Name="lbl_windowClose" Content="r" HorizontalAlignment="Left" Margin="330,1,0,0" VerticalAlignment="Top" FontFamily="Webdings" MouseDown="lbl_windowClose_MouseDown" Height="22" Width="22"/>
            <Label x:Name="lbl_windowMinimize" Content="0" HorizontalAlignment="Left" Margin="308,1,0,0" VerticalAlignment="Top" FontFamily="Webdings" MouseDown="lbl_windowMinimize_Click" Height="22" Width="22"/>
        </Grid>
    </Grid>
</Window>
